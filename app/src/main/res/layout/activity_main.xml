<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff373737">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tbl_p_layout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tbl_rowP1"
            android:layout_marginBottom="10dp"
            android:touchscreenBlocksFocus="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_P1"
                android:src="@drawable/patient_blank_one"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="#ff3fb355"
                android:adjustViewBounds="true" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/tbl_rowP2" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_P2"
                android:src="@drawable/patient_blank_two"
                android:contentDescription="patient2"
                android:adjustViewBounds="true"
                android:background="#ff3fb355" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tbl_rowP3" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_P3"
                android:src="@drawable/patient_blank_three"
                android:adjustViewBounds="true"
                android:background="#ff3fb355" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_start"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/tbl_p_layout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btn_reset"
        android:layout_below="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start" />

</RelativeLayout>
